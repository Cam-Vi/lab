<%- include("../partials/header") %>
    <h2>Edit Supplier</h2>
    <form action="/suppliers/<%= supplier._id %>?_method=PUT" method="POST">
        <table>
            <tr>
                <td>Name:</td>
                <td><input type="text" name="name" value="<%= supplier.name %>" required></td>
            </tr>
            <tr>
                <td>Address:</td>
                <td><input type="text" name="address" value="<%= supplier.address %>"></td>
            </tr>
            <tr>
                <td>Phone:</td>
                <td><input type="text" name="phone" value="<%= supplier.phone %>"></td>
            </tr>
            <tr>
                <td colspan="2" style="text-align:center;"><button type="submit">Update</button></td>
            </tr>
        </table>
    </form>
    <a href="/suppliers">⬅️ Back</a>
    <%- include("../partials/footer") %>