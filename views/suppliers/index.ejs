<%- include('../partials/header', { title: 'Suppliers' }) %>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Suppliers</h2>
        <a href="/suppliers/new" class="btn btn-success">+ Add Supplier</a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% suppliers.forEach((supplier, index) => { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= supplier.name %>
                    </td>
                    <td>
                        <%= supplier.address %>
                    </td>
                    <td>
                        <%= supplier.phone %>
                    </td>
                    <td>
                        <a href="/suppliers/<%= supplier._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/suppliers/<%= supplier._id %>/delete" method="POST">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this supplier?')">
    Delete
  </button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <%- include('../partials/footer') %>