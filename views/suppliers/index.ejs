<%- include("../partials/header") %>
    <h2>Suppliers</h2>
    <a href="/suppliers/new">➕ Add Supplier</a>
    <table>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
        <% suppliers.forEach(supplier => { %>
            <tr>
                <td>
                    <%= supplier.name %>
                </td>
                <td>
                    <%= supplier.address %>
                </td>
                <td>
                    <%= supplier.phone %>
                </td>
                <td>
                    <a href="/suppliers/<%= supplier._id %>/edit">✏️ Edit</a>
                    <form action="/suppliers/<%= supplier._id %>?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit">🗑️ Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
    </table>
    <%- include("../partials/footer") %>