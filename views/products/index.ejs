<%- include("../partials/header") %>

    <main>
        <h2>Product List</h2>
        <a href="/products/new" class="btn">‚ûï Add Product</a>

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Supplier</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <tr>
                            <td>
                                <%= product.name %>
                            </td>
                            <td>
                                <%= product.address %>
                            </td>
                            <td>
                                <%= product.phone %>
                            </td>
                            <td>
                                <%= product.supplierId ? product.supplierId.name : 'N/A' %>
                            </td>
                            <td>
                                <a href="/products/<%= product._id %>/edit" class="btn btn-small">‚úèÔ∏è Edit</a>
                                <form action="/products/<%= product._id %>?_method=DELETE" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-small" onclick="return confirm('Delete this product?')">üóëÔ∏è Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" style="text-align:center;">No products found</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </main>

    <%- include("../partials/footer") %>